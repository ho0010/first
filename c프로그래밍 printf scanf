#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	char xc;
	printf("문자 입력 : ");
	scanf("%c", &xc);
	

	int xi;
	printf("정수 입력 : ");
	scanf("%d", &xi);
	

	float xf;
	printf("실수 입력 : ");
	scanf("%f", &xf);

	printf("입력된 문자 xc = %c \n", xc);
	printf("입력된 정수 xi = %d \n", xi);
	printf("입력된 실수 xf = %f \n", xf);


	return 0;

}
